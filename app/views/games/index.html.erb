<h1 class="game-title"> Available Games </h1>

<div class="available-list">
  <div class="sign-up">
      <% @game.each do |game| %>
        <div class="game-list">
          <h3><%= game.white_user.nil? ? 'White is open' : 'Join as Black' %></h3>
        </div>
        <div class="game-list">
            <span class="badge-success"> Game <%= game.id %> <br /></span>
            <br />

            <br />
            <%= button_to 'Join game', game_path(game.id), { action: :update, method: :patch } %>
        </div>
        <br />
      <% end %>
    </div>
  </div>
</div>
